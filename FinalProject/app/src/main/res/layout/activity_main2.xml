<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kiaramcnulty.finalproject.Main2Activity">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35dp" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnBack"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35dp"
        app:layout_constraintHorizontal_bias="0.484" />

    <TextView
        android:id="@+id/tvDisplayStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stats"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ScrollView
        android:layout_width="222dp"
        android:layout_height="278dp"
        android:visibility="visible"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplayStats"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvDisplayStats"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/tvDisplayStats"
        app:layout_constraintHorizontal_bias="0.536"
        ><TextView
        android:id="@+id/tvDisplay"
        android:layout_width="222dp"
        android:layout_height="278dp"
        android:text="Stats"
        android:visibility="visible"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplayStats"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvDisplayStats"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/tvDisplayStats"
        app:layout_constraintHorizontal_bias="0.536" /></ScrollView>
</android.support.constraint.ConstraintLayout>
