<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kiaramcnulty.finalproject.MainActivity">

    <TextView
        android:id="@+id/tvStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Enter Stat:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111" />

    <EditText
        android:id="@+id/etStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/tvStat"
        app:layout_constraintRight_toRightOf="@+id/tvStat"
        app:layout_constraintTop_toBottomOf="@+id/tvStat" />

    <Button
        android:id="@+id/btnEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="Enter"
        app:layout_constraintTop_toBottomOf="@+id/etStat"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/etStat"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/etStat" />

    <Button
        android:id="@+id/btnGetStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Stats"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toBottomOf="@+id/btnEnter"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnEnter"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btnEnter" />

</android.support.constraint.ConstraintLayout>
